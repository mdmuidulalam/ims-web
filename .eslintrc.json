{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "mocha": true,
    "enzyme": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": "error",
    "react/prop-types": "off"
  }
}
